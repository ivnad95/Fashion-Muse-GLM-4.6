# ===========================================
# Fashion Muse Studio - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# Required variables are marked with [REQUIRED]
# Optional variables are marked with [OPTIONAL]

# ===========================================
# DATABASE
# ===========================================
# [REQUIRED] Database connection URL
# For development: SQLite (default)
DATABASE_URL="file:./db/dev.db"
# For production: PostgreSQL recommended
# DATABASE_URL="postgresql://user:password@localhost:5432/fashion_muse"

# ===========================================
# NEXTAUTH CONFIGURATION
# ===========================================
# [REQUIRED] The base URL of your application
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL="http://localhost:3000"

# [REQUIRED] Secret for encrypting JWT tokens
# Generate with: openssl rand -base64 32
# NEVER commit this value!
NEXTAUTH_SECRET="generate_a_secret_with_openssl_rand_base64_32"

# ===========================================
# GOOGLE OAUTH (For Google Sign-In)
# ===========================================
# [OPTIONAL] Only needed if using Google Sign-In feature
# Get from: https://console.cloud.google.com/
# If not provided, users must use manual API key configuration

# Google OAuth Client ID
GOOGLE_CLIENT_ID=""

# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET=""

# ===========================================
# GEMINI API
# ===========================================
# [OPTIONAL] Server-side Gemini API key
# Get from: https://makersuite.google.com/app/apikey
# If not provided, users must provide their own API keys

GEMINI_API_KEY=""

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# [OPTIONAL] Server configuration
PORT=3000
HOSTNAME="127.0.0.1"
NODE_ENV="development"

# [OPTIONAL] Allowed origins for CORS (production only)
# Comma-separated list of origins
# ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# ===========================================
# IMAGE STORAGE (Future Enhancement)
# ===========================================
# [OPTIONAL] Cloud storage configuration for production

# AWS S3
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="fashion-muse-images"

# OR Cloudinary
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""

# ===========================================
# RATE LIMITING (Future Enhancement)
# ===========================================
# [OPTIONAL] Redis for rate limiting

# REDIS_URL="redis://localhost:6379"
# UPSTASH_REDIS_REST_URL=""
# UPSTASH_REDIS_REST_TOKEN=""

# ===========================================
# MONITORING & ANALYTICS (Future Enhancement)
# ===========================================
# [OPTIONAL] Error tracking and analytics

# Sentry DSN
# SENTRY_DSN=""

# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# ===========================================
# FEATURE FLAGS (Future Enhancement)
# ===========================================
# [OPTIONAL] Enable/disable features

# ENABLE_SOCKET_IO="true"
# ENABLE_GENERATION_QUEUE="false"
# ENABLE_SOCIAL_SHARING="false"

# ===========================================
# NOTES
# ===========================================
# 1. Never commit .env.local or .env.production to git
# 2. All secrets should be generated using secure random methods
# 3. Use different secrets for development and production
# 4. Keep this template file updated when adding new variables
# 5. Document new variables with clear descriptions
